{
    "extends": ["eslint:recommended"],
    "env": {
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {
        "sourceType": "module"
    },
    "parserOptions" : {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true      
        }      
    },
    "rules": {
        "indent": [2, 2],
        "linebreak-style": 0,
        "eol-last": 2,
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "eqeqeq": [2, "smart"],
        "no-use-before-define": [2, "nofunc"],
        "no-unused-vars": [2, {"vars": "local", "args": "none"}],
        "no-multi-str": 2,
        "no-irregular-whitespace": 2
    }
}
